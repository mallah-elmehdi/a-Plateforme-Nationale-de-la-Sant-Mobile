if (population)
	//- VARIABLES
	-var title = 'Population à couvrir par l\'équipe mobile', id = 'population'
	//- LAYOUTS
	.col-12
		.card
			.card-body
				.d-flex.align-items-center.justify-content-between
					.d-flex.align-items-center.fw-bold
						ion-icon.text-1.fs-6.me-2(name='people-circle-outline')
						span.fs-7.text-dark= title
					//- download pdf / excel
					.btn-group.shadow-0(role='group')
						button.btn.btn-sm.btn-light(type='button' data-bs-toggle='dropdown' aria-expanded='false')
							<ion-icon class="fs-5" name="download-outline"></ion-icon>
						ul.dropdown-menu.shadow.border
							li
								button.dropdown-item.downloadPlanActionPdf(type='button' data-id=id data-region=data.document.region data-province=data.document.province data-csr=document.csr data-category=data.document.category  data-createdat=data.planAction.createdAt data-updatedat=data.planAction.updatedAt data-submit=data.planAction.submit)
									.d-flex.align-items-center
										img.me-2(src="/../../image/pdf.svg", alt="pdf" width="20px")
										span PDF
							li
								button.dropdown-item.downloadExcel(type='button' data-title=title data-id=id)
									.d-flex.align-items-center
										img.me-2(src="/../../image/excel.svg", alt="pdf" width="20px")
										span Excel
			.card-body
				.table-responsive
					table.table.thisTable.table-bordered(id=id data-title=title data-id=id data-align='left')
						tbody
							tr
								th Population rurale
								td= population.population.rurale
							tr
								th Population cible de l'équipe mobile
								td= population.population.cible
							tr
								th Population habitant à moins de 3km
								td= population.population.habitantMoins3km
							tr
								th Population habitant entre 3km et 6km
								td= population.population.habitantEntre3km6km
							tr
								th Population habitant entre 6km et 10km
								td= population.population.habitantEntre6km10km
							tr
								th Population habitant à plus de 10km
								td= population.population.habitantPlus10km
							tr
								th Distance moyenne entre le centre de santé et la route goudronnée la plus proche (km)
								td= population.distanceMoyenneRouteProche
							tr
								th Naissances attendues
								td= population.enfant.naissancesAttendues
							tr
								th Enfants moins de 1ans
								td= population.enfant.moins1ans
							tr
								th Enfants moins de 5ans
								td= population.enfant.moins5ans
							tr
								th Nombre de FAR
								td= population.femme.far
							tr
								th Nombre de FMAR
								td= population.femme.fmar
							tr
								th Femmes enceintes
								td= population.femme.femmeEnceinte