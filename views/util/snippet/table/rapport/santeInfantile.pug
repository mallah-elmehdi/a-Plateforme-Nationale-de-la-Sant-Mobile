if (santeInfantile)
	//- VARIABLES
	-var title = 'Santé infantile ', id = 'santeInfantile'
	//- LAYOUTS
	.col-12
		.card
			.card-body
				.d-flex.align-items-center.justify-content-between
					.d-flex.align-items-center.fw-bold
						ion-icon.text-1.fs-6.me-2(name='accessibility-outline')
						span.fs-7.text-dark= title
					//- download pdf / excel
					.btn-group.shadow-0(role='group')
						button.btn.btn-sm.btn-light(type='button' data-bs-toggle='dropdown' aria-expanded='false')
							<ion-icon class="fs-5" name="download-outline"></ion-icon>
						ul.dropdown-menu.shadow.border
							li
								button.dropdown-item.downloadSortiePdf(type='button' data-id=id data-region=document.region data-province=document.province data-csr=document.csr data-category=document.category data-trimestre=trimestre data-createdat=data.sortie ? data.sortie.createdAt : data.trimestre.createdAt data-updatedat= data.sortie ? data.sortie.updatedAt : '' data-submit=data.sortie ? data.sortie.submit : '')
									.d-flex.align-items-center
										img.me-2(src="/../../image/pdf.svg", alt="pdf" width="20px")
										span PDF
							li
								button.dropdown-item.downloadExcel(type='button' data-title=title data-id=id)
									.d-flex.align-items-center
										img.me-2(src="/../../image/excel.svg", alt="pdf" width="20px")
										span Excel
			.card-body
				.table-responsive
					table.table.thisTable.table-bordered(id=id data-title=title data-id=id data-align='left')
						tbody
							tr
								th(colspan="2") Nombre d’enfants pris en charge
								td.text-center= santeInfantile.enfantPrisesCharge
							tr
								th(rowspan="3" style="vertical-align:middle;") Vaccination
								th DTC3-Hib3-HB3 (pentavalent)
								td.text-center= santeInfantile.vaccination.pentavalent
							tr
								th RR
								td.text-center= santeInfantile.vaccination.rr
							tr
								th BCG
								td.text-center= santeInfantile.vaccination.bcg
							tr
								th(colspan="2") Vitamine A (2ème prise)
								td.text-center= santeInfantile.vitamineA
							tr
								th(colspan="2") Vitamine D (2ème prise)
								td.text-center= santeInfantile.vitamineD
							tr
								th(colspan="2") Nombre d’enfants avec insuffisance Pondérale (P/A&lt;-2DS)
								td.text-center= santeInfantile.enfantsAvecInsuffisancePonderale
							tr
								th(colspan="2") Nombre d’enfants avec retard de croissance (T/A&lt;-2DS)
								td.text-center= santeInfantile.enfantsAvecRetardCroissance
							tr
								th(colspan="2") Nombre de cas de diarrhée
								td.text-center= santeInfantile.diarrhe
							tr
								th(colspan="2") Nombre de cas d’infections respiratoires aiguës (IRA)
								td.text-center= santeInfantile.ira
							tr
								th(colspan="2") Nombre des enfants référées
								td.text-center= santeInfantile.reference