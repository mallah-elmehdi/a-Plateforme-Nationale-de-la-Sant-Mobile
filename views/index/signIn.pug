extends ../util/base

block tail
	script(type="module" src="/../../js/index/signIn.js")
	script(type="module" src="/../../js/util/validation.js")

block body
	section.min-vh-100.d-flex.align-items-center.justify-content-center.flex-column
		.mb-4.text-white.d-flex.align-items-center
			img(src="/../../image/ms-logo.png", alt="MS" width="300px")
		.rounded-3.shadow-sm.w-max-3.bg-sign.p-4
			.d-flex.flex-column.justify-content-between.align-items-center
				a.mb-4(href="/") 
					img.mb-4(src="/../../image/logo-test-white.png", alt="umm" width="250px")
				.card.card-body.w-100
					form(action=url method="post" autocomplete="off")
						.row.g-4
							.col-12
								label.form-label.text-dark(for='username') Email d'utilisateur
								input#username.form-control(type='email' name='email' placeholder='utilisateur' required)
								.invalid-feedback.fs-8
							.col-12
								label.form-label.text-dark(for='password') Mot de passe
								.input-group
									input.form-control(type='password' name='password' placeholder='Mot de passe' aria-label='password' aria-describedby='show-password' required)
									.invalid-feedback.fs-8(style="margin-top:35px;")
									button.show-password.input-group-text.bg-transparent(type='button')
										ion-icon(name='eye-outline')
							//- .col-12
								a.text-decoration-none.fs-8(href="/forgot-password") Mot de passe oublié ?
							.col-12
								button.btn.bg-grd.w-100(type='submit') Se connecter
