extends ../util/base

block body
	.bg-body
		header.landing-page-img
			.container
				nav.card.card-body.bg-5-opacity.rounded-0
					.d-flex.justify-content-between.align-items-center
						a(href="/")
							img.img-logo(src="/../../image/logo-test.png", alt="umm")
						a.btn.btn-sm.bg-5.text-white(href='/sign-in')= data.user ? 'mon profil' : 'se connecter'
				.py-md-5.py-3.text-white
					h1.display-2.fw-bold.mb-3 Lorem ipsum dolor, sit amet consectetur adipisicing elit.
					span Lorem ipsum, dolor sit amet consectetur adipisicing elit. Fuga quas necessitatibus ut! Illo nostrum fugit dolorem possimus, quas id obcaecati voluptatem neque suscipit delectus molestias praesentium aut, voluptas, nam magni!
		section.card-body
			.container
				.row.g-3
					.col-12
						img.w-100.rounded(src='/../../image/news/'+data.article.image alt=data.article.title)
					.col-12
						span.fs-4.fw-bold.text-dark= data.article.title
					.col-12
						-var textList = data.article.text.split('\n')
						span.fs-5.text-dark.lh-lg
							-for(var i = 0; i < textList.length; i++)
								if (textList[i] != '\n' && textList[i] && textList[i].trim())
									span= textList[i]
									br
									br
		footer.bg-dark.card-body
			.container
				.row.g-3
					.col-12.text-center
						a(href="/")
							img.img-logo(src="/../../image/logo-test.png", alt="umm")
					.col-12
						include ../util/snippet/footer