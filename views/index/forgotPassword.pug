extends ../util/base

block tail
	script(type="module" src="/../../js/util/validation.js")

block body
	section.min-vh-100.d-flex.align-items-center.justify-content-center
		.w-max-1
			.row.g-3
				.col-12
					.card.card-body.my-2.w-100
						form(action=url method="post" autocomplete="off")
							.row.g-3
								.col-12.text-center
									span.text-center.text-1.py-3 LOGO
								.col-12
									span.fs-7 Besoin d'aide pour votre mot de passe ?
								.col-12
									span.fs-6 Entrez l'adresse email que vous utilisez et nous vous aiderons à créer un nouveau mot de passe.
								.col-12
									label.form-label.text-dark.fs-7(for='username') Email d'utilisateur
									input#username.form-control.form-control-sm(type='email' name='email' placeholder='utilisateur' required)
									.invalid-feedback.fs-8
								.col-12
									a.text-decoration-none.fs-8(href="/") Retourner à la page de connexion
								.col-12
									button.btn.btn-sm.bg-grd.w-100(type='submit') récupérer le mot de passe
				.col-12
					.text-muted.d-flex.align-items-center
						img.me-2(src="/../../image/ms-logo.png", alt="MS", width="20px")
						.fs-8 &copy; 2021 Ministère de la Santé. Tous droits réservés.
