extends profile

block tail
	//- LIBRARY
	script(src='/../js/util/jquery-jvectormap-2.0.5.min.js')
	script(src='/../js/util/toggleMap.js')
	//- MAP
	script(src='/../js/util/mapProvince.js')
	//- CARTE
	script(src='/../js/province/carte/rapport.js')


block main
	.row.g-3#data(data-code=codeProvince data-province=data.document.province data-region=data.document.region data-trimestre=trimestre)
		.col-12
			include ../util/snippet/titleRapport

		//- ---------------- map
		.col-12
			.card.card-body
				.row.g-3
					.col-12
						.d-flex.align-items-center.fs-7
							<ion-icon name="stats-chart-outline"  class="me-2 text-1"></ion-icon>
							span.text-dark = 'Taux de remplissage du rapport - Trimestre ' + trimestre  
					.col-12
						#dataProvince(data-carte=JSON.stringify(data.carte.province) data-rapport=JSON.stringify(data.rapport.province) data-trimestre=trimestre)
							#province-map(style="width: 100%; height: 400px;")

		#modalPlace