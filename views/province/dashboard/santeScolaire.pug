extends ../profile
 
block tail
	//- LIBRARY
	script(src='/../../js/province/jquery-jvectormap-2.0.5.min.js')
	script(src='/../../js/province/toggleMap.js')
	//- MAP
	script(src='/../../js/province/province/map.js')
	//- CARTE
	script(src='/../../js/province/province/carte/santeScolaire.js')

block main
	.row.g-3#data(data-code=codeProvince)
		.col-12
			include ../../util/snippet/titleDashboard
		.col-12
				.dropdown
					button#dropdownPreview.btn.btn-sm.text-dark.bg-3.dropdown-toggle(type='button' data-bs-toggle='dropdown' data-bs-auto-close="outside" aria-expanded='false')
						| data
					ul.dropdown-menu(aria-labelledby='dropdownPreview')
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='visiteEtablissementVisite' checked)
							span Etablissements visités
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='visiteEleveVue')
							span Elèves vus
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='eleveExamineVms')
							span Elèves examinés lors de la VMS
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='lutteContreDeficienceVisuelle')
							span Lutte contre les déficiences visuelles

		//- ---------------- map
		.col-12
			.card.card-body
				.row.g-3
					.col-12
						.d-flex.align-items-center.fs-7
							<ion-icon name="stats-chart-outline"  class="me-2 text-1"></ion-icon>
							span.text-dark#title Santé scolaire - Visites des établissements
					.col-12
						#dataProvince(data-carte=JSON.stringify(data.carte.province))
							#province-map(style="width: 100%; height: 400px;")

