extends ../profile
 
block tail
	//- LIBRARY
	script(src='/../../js/region/jquery-jvectormap-2.0.5.min.js')
	script(src='/../../js/region/toggleMap.js')
	//- MAP
	script(src='/../../js/region/region/map.js')
	script(src='/../../js/region/province/map.js')
	//- CARTE
	script(src='/../../js/region/region/carte/santeInfantile.js')
	script(src='/../../js/region/province/carte/santeInfantile.js')
	//- CHART
	script(src='/../../js/region/province/chart/santeInfantile.js')

block main
	.row.g-3#data(data-code=data.document.codeRegion data-list=provinceList)
		.col-12
			include ../../util/snippet/titleDashboard
		.col-12
			.d-flex.flex-wrap
				.dropdown.me-2
					button#dropdownPreview.btn.btn-sm.text-dark.bg-8.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
						| Division de la carte
					ul.dropdown-menu(aria-labelledby='dropdownPreview')
						li.list-group-item.dropdown-item
							input#previewZone1.form-check-input(type='radio' name='previewZone' value="regional" checked)
							label.form-check-label(for='previewZone1') régional
						li.list-group-item.dropdown-item
							input#previewZone2.form-check-input(type='radio' name='previewZone' value="provincial")
							label.form-check-label(for='previewZone2') provincial

				.dropdown
					button#dropdownPreview.btn.btn-sm.text-dark.bg-8.dropdown-toggle(type='button' data-bs-toggle='dropdown' data-bs-auto-close="outside" aria-expanded='false')
						| data
					ul.dropdown-menu(aria-labelledby='dropdownPreview')
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='enfantPrisesCharge' checked)
							span Nombre d’enfants pris en charge
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='vaccination')
							span Vaccination
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='vitamineA')
							span Vitamine A (2ème prise)
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='vitamineD')
							span Vitamine D (2ème prise)
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='enfantsAvecInsuffisancePonderale')
							span Nombre d’enfants avec insuffisance Pondérale (P/A&lt;-2DS)
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='enfantsAvecRetardCroissance')
							span Nombre d’enfants avec retard de croissance (T/A&lt;-2DS)
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='diarrhe')
							span Nombre de cas de diarrhée
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='ira')
							span Nombre de cas d’infections respiratoires aiguës (IRA)
						li.list-group-item.dropdown-item
							input.form-check-input.me-1(type='radio' name='data' value='reference')
							span Nombre des enfants référées

		//- ---------------- map
		.col-12
			.card.card-body
				.row.g-3
					.col-12
						.d-flex.align-items-center.fs-7
							<ion-icon name="stats-chart-outline"  class="me-2 text-1"></ion-icon>
							span.text-dark  Santé maternelle
					.col-12
						span#title.badge.bg-5  Nombre de femmes prises en charge
					.col-12.thisRegion
						#dataRegion(data-carte=JSON.stringify(data.carte.region) )
							#region-map(style="width: 100%; height: 400px")
					.col-12.thisProvince
						#dataProvince(data-carte=JSON.stringify(data.carte.province) )
							#province-map(style="width: 100%; height: 400px;")
					.col-12
						#province-chart(data-province=JSON.stringify(province))