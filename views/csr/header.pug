header
	-var today = new Date()
	-var thisYear = today.getFullYear()
	nav.card.w-100
		.card-body.border-bottom
			.d-flex.justify-content-between.align-items-center
				button#aside-btn.btn.btn-sm.p-1.text-1
					ion-icon.align-middle.fs-4(name='menu-outline')
				.d-flex.align-items-center
					//- notification
					//- .dropdown
						button#dropdownNotif.btn.bg-warning-light.rounded-circle.p-3.position-relative.me-2(type='button' data-bs-toggle='dropdown' aria-expanded='false')
							.position-absolute.top-50.start-50.translate-middle
								<ion-icon name="notifications-outline" class="fs-5 text-warning align-middle"></ion-icon>
						ul.dropdown-menu(aria-labelledby='dropdownNotif')
							a.dropdown-item.list-group-item.list-group-item-action(href='#') Notif 1
							a.dropdown-item.list-group-item.list-group-item-action(href='#') Notif 2
							a.dropdown-item.list-group-item.list-group-item-action(href='#') Notif 3

					//- video
					//- button.btn.bg-danger-light.rounded-circle.p-3.position-relative.me-2(type='button' data-bs-toggle='modal' data-bs-target='#videoTuto')
						.position-absolute.top-50.start-50.translate-middle
							<ion-icon name="play-outline" class="fs-5 text-danger align-middle"></ion-icon>
					//- #videoTuto.modal.fade(tabindex='-1' aria-labelledby='videoTutoLabel' aria-hidden='true')
						.modal-dialog.modal-dialog-centered.modal-lg.flex-column
							button.align-self-end.position-relative.btn.btn-sm.btn-light.rounded-circle.p-3.mb-2(type="button" data-bs-dismiss='modal' aria-label='Close')
								.position-absolute.top-50.start-50.translate-middle
									<ion-icon name="close-outline" class="fs-5 text-dark align-middle"></ion-icon>
							.modal-content
								.ratio.ratio-16x9
									iframe(src='https://www.youtube.com/embed/vcNAhUqH9U0?rel=0' title='YouTube video' allowfullscreen)
					//- change password 
					a.btn.btn-sm.bg-5.px-2.me-2(href= '/csr/' + data.document.id + '/changer-le-mot-de-passe')
						.d-flex.align-items-center.text-white
							ion-icon.fs-7(name='cog-outline' class="align-middle")
							span.ms-1.fs-8.rm-mobile changer le mot de passe
					//- log out
					a.btn.btn-sm.bg-5.px-2(href='/sign-out')
						.d-flex.align-items-center.text-white
							ion-icon.fs-7(name='log-out-outline' class="align-middle")
							span.ms-1.fs-8.rm-mobile se déconnecter
		.card-body.pb-1
			.d-flex.align-items-center.flex-wrap
				if (data.document.region)
					span.rounded.bg-3.p-1.fs-8.text-dark.me-2.fw-normal.lh-1.mb-2= 'Direction Régionale de la Santé  : ' + data.document.region 
					if (data.document.province)
						span.rounded.bg-3.p-1.fs-8.text-dark.me-2.fw-normal.lh-1.mb-2= 'Délégation du Ministère de la Santé : ' + data.document.province
					if (data.document.csr)
						span.rounded.bg-3.p-1.fs-8.text-dark.me-2.fw-normal.lh-1.mb-2= 'Centre de santé (' + data.document.category + ') : ' + data.document.csr
				else
					span.rounded.bg-3.p-1.fs-8.text-dark.me-2.fw-normal.mb-2.lh-1= 'Ministère de la Santé'
					span.rounded.bg-3.p-1.fs-8.text-dark.me-2.fw-normal.mb-2.lh-1= 'Direction de la Population'
					span.rounded.bg-3.p-1.fs-8.text-dark.me-2.fw-normal.mb-2.lh-1= 'Service de la Coordination et de la Collaboration Intersectorielle'
				span.rounded.bg-3.p-1.fs-8.text-dark.me-2.fw-normal.lh-1.mb-2= 'Année : ' + thisYear